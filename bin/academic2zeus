#!/bin/bash

SOURCE=${HOME}/Sites/wowchemy-academic
DEST=${HOME}/mnt/zeus/jun/public_html/hugo

hugo -s ${SOURCE}\
	-b /~jun/ \
	-d  ${DEST}\
	--cleanDestinationDir

echo "(cd ${DEST}; ln -sf ../custom/download .)"
(cd ${DEST}; ln -sf ../custom/download .)

cat << EOF > ${DEST}/.htaccess
ErrorDocument 404 /~jun/ja/404.html
EOF
